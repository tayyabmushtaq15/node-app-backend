{
	"info": {
		"name": "Node Auth API",
		"description": "Complete API collection for Node.js Authentication System with OTP, Password Reset, and User Management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "node-auth-api"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.environment.set('auth_token', jsonData.data.token);",
									"        pm.environment.set('user_id', jsonData.data.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"johndoe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "register"]
						},
						"description": "Register a new user. OTP will be sent to email for verification."
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.environment.set('auth_token', jsonData.data.token);",
									"        pm.environment.set('user_id', jsonData.data.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login with email and password. Returns JWT token."
					}
				},
				{
					"name": "Verify Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/verify-email",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "verify-email"]
						},
						"description": "Verify email address with OTP received after registration."
					}
				},
				{
					"name": "Resend Verification Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/resend-verification",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "resend-verification"]
						},
						"description": "Resend email verification OTP."
					}
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get All Users (Admin Only)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users?page=1&limit=10&sortBy=createdAt&sortOrder=desc",
							"host": ["{{base_url}}"],
							"path": ["api", "users"],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Items per page"
								},
								{
									"key": "sortBy",
									"value": "createdAt",
									"description": "Field to sort by (username, email, createdAt, etc.)"
								},
								{
									"key": "sortOrder",
									"value": "desc",
									"description": "Sort order: asc or desc"
								},
								{
									"key": "search",
									"value": "",
									"description": "Search in username, email, firstName, lastName",
									"disabled": true
								},
								{
									"key": "role",
									"value": "",
									"description": "Filter by role: admin or user",
									"disabled": true
								},
								{
									"key": "emailVerified",
									"value": "",
									"description": "Filter by email verification: true or false",
									"disabled": true
								},
								{
									"key": "gender",
									"value": "",
									"description": "Filter by gender: male, female, or other",
									"disabled": true
								},
								{
									"key": "city",
									"value": "",
									"description": "Filter by city",
									"disabled": true
								},
								{
									"key": "state",
									"value": "",
									"description": "Filter by state",
									"disabled": true
								},
								{
									"key": "country",
									"value": "",
									"description": "Filter by country",
									"disabled": true
								}
							]
						},
						"description": "Get all users with pagination, sorting, search, and filters. Admin only."
					}
				},
				{
					"name": "Get All Users - With Search",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users?page=1&limit=10&search=john",
							"host": ["{{base_url}}"],
							"path": ["api", "users"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								},
								{
									"key": "search",
									"value": "john"
								}
							]
						},
						"description": "Search users by username, email, firstName, or lastName."
					}
				},
				{
					"name": "Get All Users - With Filters",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users?page=1&limit=10&role=user&emailVerified=true&gender=male",
							"host": ["{{base_url}}"],
							"path": ["api", "users"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								},
								{
									"key": "role",
									"value": "user"
								},
								{
									"key": "emailVerified",
									"value": "true"
								},
								{
									"key": "gender",
									"value": "male"
								}
							]
						},
						"description": "Get users with multiple filters applied."
					}
				},
				{
					"name": "Get User By ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/{{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "{{user_id}}"]
						},
						"description": "Get user by ID. Admin can get any user, regular users can only get their own."
					}
				},
				{
					"name": "Update User",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"age\": 25,\n    \"gender\": \"male\",\n    \"phoneNumber\": \"1234567890\",\n    \"address\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zip\": \"10001\",\n    \"country\": \"USA\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/{{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "{{user_id}}"]
						},
						"description": "Update user profile. Admin can update any user, regular users can only update their own."
					}
				},
				{
					"name": "Delete User (Admin Only)",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/{{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "{{user_id}}"]
						},
						"description": "Delete a user. Admin only."
					}
				}
			]
		},
		{
			"name": "Password Reset",
			"item": [
				{
					"name": "Forgot Password",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Note: Check your email for the OTP code",
									"// The OTP will be sent to the email address provided"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/password/forgot",
							"host": ["{{base_url}}"],
							"path": ["api", "password", "forgot"]
						},
						"description": "Request password reset. OTP will be sent to email."
					}
				},
				{
					"name": "Verify Reset OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.resetToken) {",
									"        pm.environment.set('reset_token', jsonData.data.resetToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/password/verify-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "password", "verify-otp"]
						},
						"description": "Verify OTP for password reset. Returns reset token."
					}
				},
				{
					"name": "Reset Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"newPassword\": \"newSecurePassword123\",\n    \"resetToken\": \"{{reset_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/password/reset",
							"host": ["{{base_url}}"],
							"path": ["api", "password", "reset"]
						},
						"description": "Reset password using the reset token from verify-otp step."
					}
				}
			]
		},
